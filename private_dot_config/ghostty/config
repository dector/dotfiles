# GTK windows
window-decoration = false
gtk-titlebar = false

# Terminal UI
font-family = "Monaspace Argon"
cursor-style-blink = false

# Scrolling
#  top/bottom
keybind = ctrl+home=scroll_to_top
keybind = ctrl+end=scroll_to_bottom
#  few lines
keybind = ctrl+down=scroll_page_lines:10
keybind = ctrl+up=scroll_page_lines:-10
#  full page
keybind = ctrl+shift+down=scroll_page_down
keybind = ctrl+shift+up=scroll_page_up

# Tabs
keybind = ctrl+s>t>n=new_tab
keybind = ctrl+s>t>l=next_tab
keybind = ctrl+s>t>h=previous_tab
keybind = ctrl+s>t>w=close_tab

# Splits
keybind = ctrl+s>s>left=new_split:left
keybind = ctrl+s>s>right=new_split:right
keybind = ctrl+s>s>down=new_split:down
keybind = ctrl+s>s>up=new_split:up

keybind = ctrl+s>s>h=goto_split:left
keybind = ctrl+s>s>l=goto_split:right
keybind = ctrl+s>s>j=goto_split:down
keybind = ctrl+s>s>k=goto_split:up

# Clipboard
keybind = ctrl+s>y=copy_to_clipboard
keybind = ctrl+s>p=paste_from_clipboard
