#theme = Catppuccin Frappe
#theme = Arthur
#theme = Horizon
theme = Atom One Dark

command = /usr/sbin/fish

# GTK windows
window-decoration = false
gtk-titlebar = false

#window-width = 115
#window-height = 35

# Terminal UI
#font-family = "Monaspace Argon"
font-size = 11
cursor-style = block
cursor-style-blink = false
#shell-integration-features = no-cursor

# Terminfo fix
# https://ghostty.org/docs/help/terminfo
shell-integration-features = sudo
shell-integration-features = ssh-env

# Scrolling
#  top/bottom
keybind = shift+home=scroll_to_top
keybind = shift+end=scroll_to_bottom
# prompt
keybind = shift+page_down=jump_to_prompt:1
keybind = shift+page_up=jump_to_prompt:-1
keybind = shift+down=scroll_page_lines:8
keybind = shift+up=scroll_page_lines:-8
#  few lines
keybind = ctrl+shift+down=scroll_page_lines:1
keybind = ctrl+shift+up=scroll_page_lines:-1
#keybind = shift+page_down=scroll_page_lines:15
#keybind = shift+page_up=scroll_page_lines:-15
#  full page
keybind = ctrl+page_down=scroll_page_down
keybind = ctrl+page_up=scroll_page_up

# Tabs `t`
keybind = ctrl+q>ctrl+t>n=new_tab
keybind = ctrl+q>ctrl+t>l=next_tab
keybind = ctrl+q>ctrl+t>h=previous_tab
keybind = ctrl+&=new_tab
keybind = ctrl+shift+bracket_right=next_tab
keybind = ctrl+shift+bracket_left=previous_tab
keybind = ctrl+q>ctrl+t>x=close_tab

# Splits `s`
keybind = ctrl+q>ctrl+w>left=new_split:left
keybind = ctrl+q>ctrl+w>right=new_split:right
keybind = ctrl+q>ctrl+w>down=new_split:down
keybind = ctrl+q>ctrl+w>up=new_split:up
keybind = ctrl+q>ctrl+w>v=new_split:right
keybind = ctrl+q>ctrl+w>s=new_split:down
keybind = ctrl+q>ctrl+w>shift+v=new_split:left
keybind = ctrl+q>ctrl+w>shift+s=new_split:up

keybind = ctrl+q>ctrl+w>h=goto_split:left
keybind = ctrl+q>ctrl+w>l=goto_split:right
keybind = ctrl+q>ctrl+w>j=goto_split:down
keybind = ctrl+q>ctrl+w>k=goto_split:up

# Clipboard
keybind = ctrl+q>y=copy_to_clipboard
keybind = ctrl+q>p=paste_from_clipboard
keybind = shift+enter=text:\n
