# GTK windows
window-decoration = false
gtk-titlebar = false

# Terminal UI
font-family = "Monaspace Argon"
cursor-style-blink = false

# Scrolling
#  top/bottom
keybind = ctrl+home=scroll_to_top
keybind = ctrl+end=scroll_to_bottom
#  few lines
keybind = ctrl+down=scroll_page_lines:10
keybind = ctrl+up=scroll_page_lines:-10
#  full page
keybind = ctrl+shift+down=scroll_page_down
keybind = ctrl+shift+up=scroll_page_up

# Tabs `t`
keybind = ctrl+q>t>n=new_tab
keybind = ctrl+q>t>l=next_tab
keybind = ctrl+q>t>h=previous_tab
keybind = ctrl+q>t>w=close_tab

# Splits `s`
keybind = ctrl+q>s>left=new_split:left
keybind = ctrl+q>s>right=new_split:right
keybind = ctrl+q>s>down=new_split:down
keybind = ctrl+q>s>up=new_split:up

keybind = ctrl+q>s>h=goto_split:left
keybind = ctrl+q>s>l=goto_split:right
keybind = ctrl+q>s>j=goto_split:down
keybind = ctrl+q>s>k=goto_split:up

# Clipboard
keybind = ctrl+q>y=copy_to_clipboard
keybind = ctrl+q>p=paste_from_clipboard
