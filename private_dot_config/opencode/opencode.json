{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "messages_half_page_up": "pageup",
    "messages_half_page_down": "pagedown",
    "messages_page_up": "ctrl+pageup",
    "messages_page_down": "ctrl+pagedown"
  },
  "permission": {
    "read": "allow",
    "write": "ask",
    "edit": "ask",
    "bash": {
      "*": "ask",
      "ls": "allow",
      "ls *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git branch": "allow",
      "git branch *": "allow",
      "git rev-parse": "allow",
      "git rev-parse *": "allow",
      "git ls-files": "allow",
      "git ls-files *": "allow",
      "go test *": "allow",
      "go vet *": "allow",
      "gofmt *": "allow",
      "bun test": "allow",
      "bun test *": "allow",
      "wc *": "allow",
      "pwd": "allow"
    },
    "glob": "allow",
    "grep": "allow",
    "task": "allow",
    "webfetch": "allow",
    "question": "allow",
    "todowrite": "allow"
  },
  "mcp": {
  }
}
