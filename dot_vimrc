" Use `space` as a leader key
let mapleader = " "

" Reject vi compatibility, accept modernity
set nocompatible

" Add Wayland clipboard support -- BUG not working on Bazzite
set clipmethod=wayland
set clipboard=unnamedplus

" TAB = 4 spaces
set tabstop=4
" Insert spaces when TAB pressed
set shiftwidth=4
set expandtab

" Show at least few lines around cursor
set scrolloff=5

" Show hybrid line numbers
" (absolute for current line, relative for others)
set nu rnu

" Show statusbar always
set laststatus=2
set statusline=\ \ %{toupper(mode())}%=%f\ %l/%L\ %y\ \ 

" Execute multicursor changes immediately
set ttimeoutlen=2

" Show visual limiters on 72,100,120 symbols
set colorcolumn=72,100,120
highlight ColorColumn ctermbg=lightgrey

" Search: respect case only if it has uppercase letter
set ignorecase 
set smartcase

" Search: use incremental mode: jump to the next value while typing
set incsearch
" Search: highlight all search results
set hlsearch

" Enable syntax highlighting
syntax on

" Hide all highlights on ` hh`
nnoremap <leader>hh :noh<CR>
" Toggle line numbers
nmap <leader>hn :set rnu!<CR>

" Copy selection to system clipboard -- BUG issues on Bazzite
nmap <leader><leader>yy "+yy
nmap <leader><leader>y "+y
nmap <leader><leader>Y "+Y
vmap <leader><leader>y "+y
vmap <leader><leader>Y "+Y
" ... this seems to work on Bazzite
xnoremap <silent> <leader><leader>y :w !wl-copy<CR><CR>

" Paste from system clipboard
nmap <leader><leader>p "+p
nmap <leader><leader>P "+P
vmap <leader><leader>p "+p
vmap <leader><leader>P "+P

" Use `U` for Redo action
nnoremap U <C-R>

" Center cursor on long jumps
nmap <C-b> <C-b>zz
nmap <C-f> <C-f>zz
nmap <C-d> <C-d>zz
nmap <C-u> <C-u>zz
nmap <C-o> <C-o>zz
nmap <C-i> <C-i>zz

" Jump 5 lines
nmap J 5jzz
nmap K 5kzz
vmap J 5jzz
vmap K 5kzz

" One-shot command in insert mode
"inoremap <C-v> <C-o>

" Use Q for recording macros
nnoremap Q q
nnoremap q <Nop>

" Enter empty line before or after current line 
" issue: needs `uu` instead of `u`
nmap <C-Enter> o<ESC>k
nmap <S-Enter> O<ESC>j

" Enable Wayland clipboard -- BUG not working on Bazzite
"if executable('wl-copy') && executable('wl-paste')
"  let g:clipboard = {
"        \ 'name': 'wayland',
"        \ 'copy': {
"        \   '+': 'wl-copy',
"        \   '*': 'wl-copy',
"        \ },
"        \ 'paste': {
"        \   '+': 'wl-paste',
"        \   '*': 'wl-paste',
"        \ },
"        \ 'cache_enabled': 0,
"        \ }
"endif
